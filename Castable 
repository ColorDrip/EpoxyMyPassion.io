/* General */
body {
  font-family: "Segoe UI", Arial, sans-serif;
  background: #f4f6f9;
  padding: 20px;
}

/* Container for responsiveness */
.table-container {
  max-width: 100%;
  overflow-x: auto;
  background: #ffffff;
  border-radius: 10px;
  box-shadow: 0 6px 20px rgba(0,0,0,0.08);
}

/* Table */
.styled-table {
  width: 100%;
  border-collapse: collapse;
  min-width: 900px;
}

/* Header */
.styled-table thead th {
  position: sticky;
  top: 0;
  background: #2f80ed;
  color: #ffffff;
  padding: 12px 14px;
  text-align: left;
  font-size: 14px;
  letter-spacing: 0.03em;
}

/* Body */
.styled-table tbody td {
  padding: 12px 14px;
  font-size: 14px;
  border-bottom: 1px solid #eaeaea;
}

/* Zebra stripes */
.styled-table tbody tr:nth-child(even) {
  background-color: #f8fafc;
}

/* Hover effect */
.styled-table tbody tr:hover {
  background-color: #eaf2ff;
  transition: background 0.2s ease-in-out;
}

/* Status highlight */
.styled-table td:nth-child(6) {
  font-weight: 600;
}

.styled-table td:nth-child(6):contains("Active") {
  color: green;
}

/* Small screens */
@media (max-width: 768px) {
  .styled-table {
    font-size: 13px;
  }
}