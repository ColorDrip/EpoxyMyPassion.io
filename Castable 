  padding: 20px;
  padding-bottom: 90px; /* Space for sticky button */
}

/* Table container */
.table-container {
  overflow-x: auto;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 6px 20px rgba(0,0,0,0.08);
}

/* Table */
.styled-table {
  width: 100%;
  min-width: 900px;
  border-collapse: collapse;
}

/* Header */
.styled-table thead th {
  position: sticky;
  top: 0;
  background: #2f80ed;
