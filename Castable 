<script>
/* ========== Auto Total Calculation ========== */
document.querySelectorAll(".hour-input").forEach(input => {
  input.addEventListener("input", calculateTotals);
});

function calculateTotals() {
  document.querySelectorAll("#hoursTable tbody tr").forEach(row => {
    let total = 0;
    row.querySelectorAll(".hour-input").forEach(input => {
      total += Number(input.value) || 0;
    });
    row.querySelector(".total-cell").innerText = total;
  });
}

/* ========== Save Action (demo) ========== */
function saveData() {
  const data = [];

  document.querySelectorAll("#hoursTable tbody tr").forEach(row => {
    const rowData = {
      employee: row.cells[0].innerText,
      project: row.cells[1].innerText,
      role: row.cells[2].innerText,
      location: row.cells[3].innerText,
      status: row.cells[4].innerText,
      hours: Array.from(row.querySelectorAll(".hour-input")).map(i => i.value || 0),
      total: row.querySelector(".total-cell").innerText
    };
    data.push(rowData);
  });

  console.log("Saved Data:", data);
  alert("Data saved successfully!");
}
</script>

